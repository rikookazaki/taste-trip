<div class="main">

    <h2 class="heading">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class:"label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field_new" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class:"label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"field_new" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"submit_btn" %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %><br>
  <%= link_to "戻る", "javascript:history.back();"%>

</div>
