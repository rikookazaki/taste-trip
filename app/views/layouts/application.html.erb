<!DOCTYPE html>
<html>
  <head>
    <title>TasteTrip</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <div class="link_to_new">
        <% if user_signed_in? %>
          <div class="top_btn"><%= link_to "マイページ", "#", class:"sinnkitouroku" %></div>
          <div class="top_btn"><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class:"sinnkitouroku" %></div>
          <div class="top_btn"><%= link_to "新規店舗登録", new_restaurant_path, class:"sinnkitouroku"%></div>
        <% else %>
          <div class="top_btn"><%= link_to "ユーザー登録", new_user_registration_path, class:"sinnkitouroku"%></div>
          <div class="top_btn"><%= link_to "ログイン", new_user_session_path, class:"sinnkitouroku"%></div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer></footer>
  </body>
</html>
