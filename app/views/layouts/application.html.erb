<!DOCTYPE html>
<html>
  <head>
    <title>TasteTrip</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <%= link_to "app_name", root_path, class:"taste_trip" %>
      <div class="top_btns">
        <% if user_signed_in? %>
          <div class="top_btn"><%= link_to "マイページ", user_path(current_user.id), class:"head_btn" %></div>
          <div class="top_btn"><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class:"head_btn" %></div>
          <div class="top_btn"><%= link_to "新規店舗登録", new_restaurant_path, class:"head_btn"%></div>
        <% else %>
          <div class="top_btn"><%= link_to "ユーザー登録", new_user_registration_path, class:"head_btn"%></div>
          <div class="top_btn"><%= link_to "ログイン", new_user_session_path, class:"head_btn"%></div>
        <% end %>
      </div>
    </header>
    <div class="content">
      <%= yield %>
    </div>
    <footer></footer>
  </body>
</html>
