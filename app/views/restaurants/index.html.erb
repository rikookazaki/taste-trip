<h1>トップページ</h1>

<%= link_to "新規店舗登録", new_restaurant_path %><br><br><br>

<%= search_form_for @q do |f| %>
  <div class="field">
    <%= f.label :countries_name_or_countries_region_cont, "国名で検索" %>
    <%= f.search_field :countries_name_or_countries_region_cont %>
  </div>
  <div class="actions">
    <%= f.submit "検索" %>
  </div>
<% end %>

<% if params[:q].present? %>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li><%= restaurant.name %></li>
    <% end %>
  </ul>
<% end %>